<!-- SECCIÓN DE COMENTARIOS -->
<section id="comentarios" class="bg-white py-5">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center text-dark">Comenta que te parecio el producto</h2>

        <!-- Formulario para dejar un comentario -->
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title mb-3">Deja tu comentario</h5>
                <form id="comentarioForm">
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Tu nombre" required>
                    </div>
                    <div class="mb-3">
                        <select class="form-select" required>
                            <option value="">Selecciona un producto</option>
                            <option>Nike Air Max</option>
                            <option>Nike Zoom</option>
                            <option>Nike FlyEase</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" rows="3" placeholder="Tu comentario" required></textarea>
                    </div>

                    <!-- Estrellas -->
                    <div class="mb-3 text-center">
                        <div class="star-rating">
                            <input type="radio" name="rating" id="star5" value="5" required><label for="star5">★</label>
                            <input type="radio" name="rating" id="star4" value="4"><label for="star4">★</label>
                            <input type="radio" name="rating" id="star3" value="3"><label for="star3">★</label>
                            <input type="radio" name="rating" id="star2" value="2"><label for="star2">★</label>
                            <input type="radio" name="rating" id="star1" value="1"><label for="star1">★</label>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-dark">Enviar comentario</button>
                    </div>
                </form>

                <!-- Comentarios agregados dinámicamente -->
                <div id="listaComentarios" class="mt-4"></div>
            </div>
        </div>
    </div>
</section>

<!-- ESTILOS PARA ESTRELLAS -->
<style>
    .star-rating {
        font-size: 1.5rem;
        direction: rtl;
        display: inline-flex;
        justify-content: center;
        cursor: pointer;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            color: #ddd;
            transition: color 0.2s;
            cursor: pointer;
        }

            .star-rating input:checked ~ label,
            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: #ffc107;
            }
</style>

<!-- SCRIPT -->
@section Scripts {
    <script>
        document.getElementById("comentarioForm").addEventListener("submit", function (e) {
            e.preventDefault();

            const nombre = this.querySelector('input[type="text"]').value;
            const producto = this.querySelector('select').value;
            const comentario = this.querySelector('textarea').value;
            const calificacion = this.querySelector('input[name="rating"]:checked')?.value;

            if (!calificacion) {
                alert("Por favor, selecciona una calificación con estrellas.");
                return;
            }

            const nuevoComentario = document.createElement("div");
            nuevoComentario.className = "border rounded p-3 mb-3";

            const estrellas = "⭐️".repeat(calificacion);

            nuevoComentario.innerHTML = `
                <h5 class="mb-1">${nombre}</h5>
                <small class="text-muted">${estrellas} - ${producto}</small>
                <p class="mb-0">${comentario}</p>
            `;

            document.getElementById("listaComentarios").appendChild(nuevoComentario);

            this.reset(); // Limpia el formulario
        });
    </script>
}

